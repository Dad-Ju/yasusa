{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true
	},
	"rules": {
		"array-bracket-newline": "error",
		"arrow-spacing": "error",
		"block-scoped-var": "warn",
		"brace-style": "error",
		"camelcase": "warn",
		"dot-location": "warn",
		"dot-notation": "warn",
		"eol-last": "error",
		"indent": "error",
		"key-spacing": "error",
		"max-depth": ["error", 4],
		"complexity": ["off", 2],
		"prefer-arrow-callback": "error",
		"no-unused-vars": ["warn"]
	},
	"plugins": ["@typescript-eslint"],
	"extends": [
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier",
		"airbnb-base"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"project": "tsconfig.json",
		"sourceType": "module"
	},
	"overrides": [
		{
			"rules": {
				"no-console": "off",
				"no-tabs": "off",
				"eqeqeq": "off",
				"default-case": "off",
				"radix": ["error", "as-needed"],
				"no-restricted-syntax": "off",
				"guard-for-in": "off",
				"semi": "off",
				"indent": "off",
				"comma-dangle": "off",
				"prefer-const": "off",
				"operator-linebreak": "off",
				"func-names": "off",
				"no-case-declarations": "off",
				"semi-style": "off",
				"global-require": "off",
				"no-extra-semi": "off",
				"object-curly-newline": "off",
				"import/extensions": "off",
				"import/no-unresolved": "off",
				"import/no-import-module-exports": "off"
			},
			"files": ["./**/*.ts"]
		}
	]
}
